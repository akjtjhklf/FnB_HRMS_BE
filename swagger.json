            "type": "string",
            "enum": ["active", "inactive", "on_leave"]
          },
          "max_shifts_per_week": {"type": "integer"},
          "max_hours_per_week": {"type": "number"},
          "priority": {"type": "integer", "minimum": 1, "maximum": 10}
        }
      },
      "AutoScheduleRequest": {
        "type": "object",
        "required": ["scheduleId"],
        "properties": {
          "scheduleId": {
            "type": "string",
            "format": "uuid",
            "description": "ID of the weekly schedule to auto-assign"
          },
          "options": {
            "type": "object",
            "properties": {
              "dryRun": {
                "type": "boolean",
                "default": false,
                "description": "If true, only simulate assignments without persisting to DB"
              },
              "overwriteExisting": {
                "type": "boolean",
                "default": false,
                "description": "If true, replace existing auto assignments; if false, skip shifts with manual assignments"
              },
              "weights": {
                "type": "object",
                "description": "Scoring weights for the greedy algorithm",
                "properties": {
                  "priority": {
                    "type": "number",
                    "default": 1.0,
                    "description": "Weight for employee/shift priority"
                  },
                  "workloadBalance": {
                    "type": "number",
                    "default": 0.8,
                    "description": "Weight for balancing workload (prefer employees with fewer assignments)"
                  },
                  "positionPreference": {
                    "type": "number",
                    "default": 1.2,
                    "description": "Weight for position preference match (higher = prefer top preferences)"
                  },
                  "fairness": {
                    "type": "number",
                    "default": 0.5,
                    "description": "Weight for fairness bonus (spread work evenly)"
                  }
                }
              },
              "maxShiftsPerWeek": {
                "type": "integer",
                "default": 5,
                "description": "Max shifts per employee per week (hard constraint)"
              },
              "minRestHours": {
                "type": "number",
                "default": 8,
                "description": "Minimum rest hours between shifts for same employee (hard constraint)"
              }
            }
          }
        }
      },
      "AutoScheduleResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "data": {
            "type": "object",
            "properties": {
              "assignments": {
                "type": "array",
                "description": "List of generated assignments (dry-run or persisted)",
                "items": {
                  "$ref": "#/components/schemas/ScheduleAssignment"
                }
              },
              "stats": {
                "$ref": "#/components/schemas/ScheduleStats"
              },
              "validation": {
                "type": "object",
                "properties": {
